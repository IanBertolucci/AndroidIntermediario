<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.example.androidintermediario">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".ExemploSharedPreferencesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ThreadActivity">

        </activity>
        <activity android:name=".JobActivity"></activity>
        <activity android:name=".ServiceActivity" />
        <activity android:name=".MainActivity" />

        <receiver android:name=".ExemploReceiver">
            <intent-filter>
                <action android:name="BROADCAST_ESTATICO" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <service android:name=".ExemploServices">
            <intent-filter>
                <action android:name="ExemploService" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>
        <service android:name=".ExemploBindService">
            <intent-filter>
                <action android:name="ExemploBindService" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>
        <service
                android:name=".ExemploJobService"
                android:exported="true"
                android:permission="android.permission.BIND_JOB_SERVICE" />
    </application>

</manifest>
