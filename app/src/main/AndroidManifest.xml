<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.example.androidintermediario">

    <permission android:name="com.example.androidintermediario.WRITE_DATABEASE" android:protectionLevel="normal"/>
    <permission android:name="com.example.androidintermediario.READ_DATABEASE" android:protectionLevel="normal"/>
    <permission android:name="com.example.androidintermediario.LivrosProvider" android:protectionLevel="normal"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <provider
                android:name=".LivrosProvider"
                android:authorities="com.example.androidintermediario"
                android:enabled="true"
                android:exported="true"
                android:permission="com.example.androidintermediario.LivrosProvider"
                android:writePermission="com.example.androidintermediario.WRITE_DATABEASE"
                android:readPermission="com.example.androidintermediario.READ_DATABEASE"/>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".EditarLivroActivity" />
        <activity android:name=".InserirLivroActivity" />
    </application>

</manifest>
